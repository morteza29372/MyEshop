@model CartViewModel
@{
    ViewData["Title"] = "سبد خرید";
}

<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th>کالا</th>
        <th>تعداد</th>
        <th>قیمت</th>
        <th></th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model.cartItems)
    {
        <tr>
            <td>@item.item.product.Name</td>
            <td>@item.Quantity</td>
            <td>@item.GetTotalPrice()</td>
            <td>
                <a asp-action="RemoveCart" asp-route-itemId="@item.item.ID">حذف</a>
            </td>
        </tr>
    }
    </tbody>

</table>
<h5>جمع کل : @Model.OrderTotal</h5>

